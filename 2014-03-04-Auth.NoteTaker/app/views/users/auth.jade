extends ../shared/template

block content
  .row
    .small-6.columns
      h3 Existing users, login here:
    .small-6.columns
      form#login(action='/login', method='post', enctype='multipart/form-data')
        fieldset
          .row
            .small-5.columns
              label Email
              input(type='email', name='email', placeholder='you@yourplace.com')
            .small-5.columns
              label Password
              input(type='password', name='password', placeholder='somethingsecretive')
            .small-2.columns
              label &nbsp
              button.tiny.radius.expand#login LOGIN
          .row
            .small-12.columns
              h5= loginerror
  .row
    .small-6.columns
      h3 New to the app?  Create an account here:
    .small-6.columns
      form#register(action='/register', method='post', enctype='multipart/form-data')
        fieldset
          label Email
          input(type='email', name='email', placeholder='you@yourplace.com', autofocus='true')
          label Password
          input(type='password', name='password', placeholder='something secretive')
          .row
            .small-6.columns
              label &nbsp
            .small-6.columns
              label &nbsp
              button.tiny.radius.expand#register REGISTER
          .row
            .small-12.columns
              h5= registererror
    .small-6.columns
