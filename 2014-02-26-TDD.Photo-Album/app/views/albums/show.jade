doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= album.title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
    body(style='background-image:url("'+ album.cover +'")')
    .row
      .small-12.columns
        h1= album.title + ' - ' + moment(album.taken).format('MMMM Do, YYYY')
    .row
      .small-4.columns
        form(action='/albums/' + album._id, method='POST', enctype='multipart/form-data')
          label Add Photos
          input(type='file', name='photo')
          label &nbsp
          button.tiny.radius#addphoto Add Photo
      .small-8.columns
    .row
      .small-12.columns
        each a in album.photos
          .photo(style='background-image:url("'+ a + '")')

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')
