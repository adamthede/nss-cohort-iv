doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Exercises
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Exercises
    .row
      .small-8.columns
        table#exercises
          thead
            tr
              th Name
              th Time
              th Calories
              th Date
          tbody
      .small-4.columns
        .row
          .small-12.columns
            input#name(placeholder='Name of Exercise')
            input#time(placeholder='Duration of Workout')
            input#calories(placeholder='Calories Burned')
            input#date(placeholder='Date of Activity')
        .row
          .small-12.columns
            label &nbsp;
            button.radius.tiny#create-exercise Create Exercise
        .row
          .small-12.columns
            label &nbsp;
            select#querydropdown
              option(value=reset) Reset
          .small-12.columns
            button.radius.tiny#querysearch Filter Results

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

