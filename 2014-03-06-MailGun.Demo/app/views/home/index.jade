doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1= title
    .row
      .small-4.columns
        form(action='/email', method='post')
          fieldset
            label To:
            input(type='email', name='to', placeholder='yourfriend@friends.com', autofocus=true)
            label Subject:
            input(type='text', name='subject', placeholder='hi, friend')
            label Body:
            textarea(name='body')
            label &nbsp
            button.tiny.radius.expand Send Email
      .small-8.columns

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

